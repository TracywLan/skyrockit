<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/_header.ejs') %>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <div class="all-apps-body">
      <div class="all-apps-header">
        <h1>Your Apps</h1>
        <a href="/users/<%=user._id%>/applications/new" class="add-app-link">Add an App</a>
      </div>
      <% if(applications.length === 0) { %>
            <h4>Please click "Add an App" to add your first application</h4>
        <% } %>
      <ul>
          <% applications.forEach((application)=>{ %>
            <a href="/users/<%= user._id %>/applications/<%= application._id %>">
              <li><%= application.title %> at <%= application.company %></li>
            </a>
          <% }) %>
      </ul>
    </div>
  </body>
</html>